<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$ProfileFragment"
        app:icon="@drawable/ic_baseline_volume_up_24"
        app:key="profile_header"
        app:title="My Account" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$ThemeFragment"
        app:icon="@drawable/ic_baseline_color_lens_24"
        app:key="theme_header"
        app:title="Appearance" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$MessagesFragment"
        app:icon="@drawable/ic_baseline_volume_up_24"
        app:key="messages_header"
        app:title="Audio Devices" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$TracksFragment"
        app:icon="@drawable/ic_baseline_audio_file_24"
        app:key="tracks_settings"
        app:title="Audio Playback" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$SyncFragment"
        app:icon="@drawable/ic_baseline_save_alt_24"
        app:key="sync_header"
        app:title="Export Settings" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$CameraSettings"
        app:icon="@drawable/baseline_ondemand_video_24"
        app:key="camera_header"
        app:title="Camera Settings" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$ProfileFragment"
        app:icon="@drawable/ic_baseline_account_circle_24"
        app:key="account_header"
        app:isPreferenceVisible="false"
        app:title="My Account" />

    <Preference
        app:fragment="com.shajikhan.ladspa.amprack.SettingsActivity$VersionFragment"
        app:icon="@drawable/ic_baseline_info_24"
        app:key="version_header"
        app:title="Version Information" />

    <Preference
        app:key="privacy_policy"
        app:title="Privacy Policy"
        app:summary="View Privacy Policy and License (Apache License 2.0) Information"/>

    <Preference
        app:key="cool"
        android:icon="@drawable/baseline_auto_graph_24"
        android:title="Build Variant: Cool ðŸ˜Ž"
